# Production Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=your_database_connection_string_here

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://folsme.com,https://admin.folsme.com

# Paystack Payment Configuration
PAYSTACK_SECRET_KEY=your_paystack_secret_key_here
PAYSTACK_PUBLIC_KEY=your_paystack_public_key_here

# Company Information (for invoices and emails)
COMPANY_NAME="FOLSME International Ltd"
COMPANY_ADDRESS="Head Office: Osogbo, Osun State"
COMPANY_EMAIL="folsmeinternational@gmail.com"
COMPANY_PHONE="+234 703 558 9713"

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password_here

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=/tmp/uploads